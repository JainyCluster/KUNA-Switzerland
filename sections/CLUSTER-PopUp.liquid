<style>

#PopupContainer {

background: #000000ab;
    position: fixed;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 999999999999999999;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(0px);
}

  .desktop #PopupContainer {


    
  }

#BtnClose {
    position: absolute;
    right: -1rem;
    top: -1rem;
    transform: rotateZ(45deg);
    font-size: 1.4rem;
    width: 2rem;
    height: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    z-index: 9;
    background-color: #fff;
    border-radius: 10rem;
    box-shadow: 1px 1px 10px #00000042;
  
}


  

.BannerPopupContainer{

    z-index: 999999;
    border-radius: 0.5rem;
    box-shadow: var(--pampa-box-shadow);
    width: 30%;
    display: block;
    position: relative;

  
}

.BannerPopupContainer a{

display: block;
    overflow: hidden;
    border-radius: 1rem;
  
}
  


.mobile .BannerPopupContainer{

    width: 90%;

  
}  

.BannerPopupContainer img{

    
  }


.BannerPopupContainer span p {

    font-weight: normal;
    margin: 0;
    font-size: 1.1rem;
    border-top: solid 1px;
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    
  }

#PopupContainer.hide {
  display: none;
  visibility: hidden;
  
}
  
</style>



<div id="PopupContainer" class="hide" onclick="CerrarPopup();">

{% for block in section.blocks %}

 <div class="BannerPopupContainer">
<span onclick="CerrarPopup();" id="BtnClose">+</span>
<a onclick="ga('send', 'event', 'Popup', 'Link', 'Home');" href="{{ block.settings.ImgLink }}" class="">
<img  src="{{ block.settings.ImagenFondoDesktop | img_url: '1080x1080' }}" >
</a>
   
 </div> 


  
  {% endfor %}  
</div>



<script>
 
var $PopupContainer = document.querySelector("#PopupContainer");
var $BtnClose = document.querySelector("#BtnClose");


  
setTimeout(function() {
  
  $PopupContainer.classList.remove("hide");


}, 5000);



  
function CerrarPopup() {
  $PopupContainer.classList.add("hide");
}  


  
</script>



